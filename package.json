{
  "name": "screen-capturer",
  "version": "1.0.0",
  "description": "Simple Screen Capturing App using Electron",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "nodemon --ext js,css,html --exec electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.ae.screencapturer",
    "productName": "Reihan's Screen Capturer",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "icon": "assets/reihan"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.11"
  }
}
